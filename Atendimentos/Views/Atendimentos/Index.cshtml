
@model IEnumerable<Atendimentos.Models.Atendimento> 
@{
    ViewData["Title"] = "Atendimentos";
}

<h2> @ViewData["Title"] </h2>

<p>
    <a asp-action="Incluir" class="btn btn-primary"> Incluir</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class=" bg-success">
            <th>
                @Html.DisplayNameFor(model => model.Revendedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sistema)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoraInicio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Revendedor.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sistema.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoraInicio)
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.Id">Editar</a>
                    <a asp-action="Apagar" asp-route-id="@item.Id">Apagar</a>
                </td>
            </tr>
        }
    </tbody>

</table>
